@using Business;
@{
    ViewBag.Title = "Welcome";
    Layout = "~/Views/Shared/AfterLoginView.cshtml";
}
<br />
<br />
<div class="container"><h2>Welcome: @System.Convert.ToString(Session["Name"])</h2><hr /></div>
<br />
@if (Convert.ToInt32(@Session["Accountid"]) == 1)
{
    <div class="container">
        <h3>Current Counts</h3>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <a href="@Url.Action("GetAllCategory", "Category")" class="custom-card">
                    <div class="card-counter primary">
                        <i class="glyphicon glyphicon-list" style="float:left; margin-left:20px;"></i>
                        <span class="count-numbers">@System.Convert.ToInt32(Session["CategoryCount"])</span>
                        <span class="count-name">Category</span>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a href="@Url.Action("GetAllCourse", "Course")" class="custom-card">
                    <div class="card-counter danger">
                        <i class="	glyphicon glyphicon-education" style="float:left; margin-left:20px;"></i>
                        <span class="count-numbers">@System.Convert.ToInt32(Session["CourseCount"])</span>
                        <span class="count-name">Courses</span>
                    </div>
                </a>
            </div>


            <div class="col-md-3">
                <div class="card-counter success">
                    <i class="glyphicon glyphicon-user" style="float:left; margin-left:20px;"></i>
                    <span class="count-numbers">@System.Convert.ToInt32(Session["AdminCount"])</span>
                    <span class="count-name">Admins</span>
                </div>
            </div>

            <div class="col-md-3">
                <a href="@Url.Action("GetAllInstructor", "Instructor")" class="custom-card">
