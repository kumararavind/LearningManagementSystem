@model Business.EnrollModel

@{
    ViewBag.Title = "UpdateEnrollment";
    Layout = "~/Views/Shared/AfterLoginView.cshtml";
}

<div class="" style="background-image:url('../../Images/Profile.jpg'); background-size:cover; height:450px; width:100%;">
    <br />
    <div class="container-fluid" style="">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="col-md-2"></div>
            <div class="container">
                <h2 style="color:white;">Update Enrollment</h2>
                <hr />
            </div>
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Select Enrollment Status:", new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        @Html.DropDownListFor(m => m.EnrollmentList, new SelectList(Model.EnrollmentList, "Id", "enrollmentType"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.EnrollmentList, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-3">
                        <input type="submit" value="Update" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
